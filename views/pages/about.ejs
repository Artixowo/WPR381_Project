<%- include('../partials/header.ejs') %>

<div class="page-about container">
  <h1 class="mainheading"><%= title %></h1>
  <h1 class="page-title">Meet Our Team</h1>

  <p class="about-subtitle">Passionate people behind the mission.</p>
  
  <div class="about-cards">
    <% team.forEach(member => { %>
      <div class="about-card">
        <img src="<%= member.image || '/images/default-avatar.png' %>" alt="<%= member.name %>" class="member-photo" />
        <h2><%= member.name %></h2>
        <h4><%= member.role %></h4>
        <p>"<%= member.bio %>"</p>
      </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
